# Plunge Environment Variables
# Copy this file to .env.local and fill in your values

# Pool System Configuration
# Your ScreenLogic system name (format: "Pentair: XX-XX-XX" or just "XX-XX-XX")
POOL_SYSTEM_NAME=

# Your ScreenLogic password (set during initial system setup)
POOL_PASSWORD=

# Connection mode: "local", "remote", or "both" (default: "both")
# - local: Only connect via local network (faster, requires same WiFi)
# - remote: Only connect via Pentair cloud (works anywhere)
# - both: Try local first, fall back to remote
POOL_CONNECTION_MODE=both

# Demo mode: Set to "true" to show demo data without real pool connection
NEXT_PUBLIC_DEMO=false
